.modal.fade(data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" id=`addMonitor`)
    .modal-dialog
        .modal-content
            .modal-header
                h5.h5.modal-title Start a new monitor
                button.btn-close.text-dark(type="button" data-bs-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") Ã—
            .pt-4.modal-body

                .input-group.input-group-static.mb-4.text-start
                    label Select Website/API
                    select.form-control#website-choices(name="siteId" placeholder="Departure")
                        for site in websites
                            option(value=`${site.id}`, selected) #{site.name}

                .input-group.input-group-static.mb-4.text-start
                    label Select Monitoring Team
                    select.form-control#team-choices(name="siteId" placeholder="Departure")
                        for team in teams
                            option(value=`${team.id}`, selected) #{team.name}

                .input-group.input-group-static.mb-4
                    label Check Interval
                    input.form-control(placeholder="in minutes" name="interval" type="number" onfocus="focused(this)" onfocusout="defocused(this)")
                //- .input-group.input-group-static.mb-4
                    label Task Assignee
                    input.form-control#jkanban-task-assignee(placeholder="User" type="text" onfocus="focused(this)" onfocusout="defocused(this)")
                //- .input-group.input-group-static
                    textarea.form-control#jkanban-task-description(placeholder="Task Description" rows="4")
                .alert.alert-success.d-none Changes saved!
                .text-end
                    button.m-1.btn.btn-primary#jkanban-update-task(data-toggle="modal" data-target="#jkanban-info-modal").

                        Save changes

                    button.m-1.btn.btn-secondary(data-dismiss="modal" data-target="#jkanban-info-modal").

                        Close


