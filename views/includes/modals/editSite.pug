//- button.btn.btn-block.btn-light.mb-3(type="button" data-bs-toggle="modal" data-bs-target="#modal-form") Form
.modal.fade(tabindex="-1" role="dialog" aria-labelledby=`modal-form${site.id}` id=`modal-form${site.id}` aria-hidden="true")
    .modal-dialog.modal-dialog-centered.modal-sm(role="document")
        .modal-content
            .modal-body.p-0
                .card.card-plain
                    .card-header.pb-0.text-left
                        h5 Edit Website
                        p.mb-0 #{site.name}
                    .card-body
                        form(role="form text-left" method='post' action=`/dashboard/sites/${site.id}`)
                            input(type="hidden" name="_csrf" value=`${csrfToken}`)
                            .input-group.input-group-outline.my-3
                                label.form-label Name
                                input.form-control(type="text" name='name' value=`${site.name}` onfocus="focused(this)" onfocusout="defocused(this)")
                            .input-group.input-group-outline.my-3
                                label.form-label Url
                                input.form-control(type="text" name='url' value=`${site.url}` onfocus="focused(this)" onfocusout="defocused(this)")
                            .input-group.input-group-outline.my-3
                                label.form-label organization
                                input.form-control(type="text" name='organization' value=`${site.organization}` onfocus="focused(this)" onfocusout="defocused(this)")
                            .text-center
                                button.btn.btn-round.bg-gradient-info.btn-lg.w-100.mt-4.mb-0(type="submit") Submit
                    .card-footer.text-center.pt-0.px-lg-2.px-1