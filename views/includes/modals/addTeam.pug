//- mixin teamForm(method,action,team)
.modal.fade(id='modal-form' tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true")
    .modal-dialog.modal-dialog-centered(role="document")
        .modal-content
            .modal-body.p-0
                .card.card-plain
                    .card-header.pb-0.text-left
                        h5 New Monitoring Team
                        p.mb-0 Create Team
                    .card-body
                        form(role="form text-left" action='/dashboard/teams' method='post')
                            .input-group.input-group-dynamic.my-3
                                label.form-label Name
                                input.form-control(type="text" name='title' onfocus="focused(this)" onfocusout="defocused(this)")
                            .input-group.input-group-dynamic.my-3
                                textarea.form-control(name="description" onfocus="focused(this)" onfocusout="defocused(this)" placeholder="A short description about the team and its members")
    
                            label.form-label(for="users")  Select Team Members
                            select.form-control(id=`users` name="userIds" multiple onfocus="focused(this)" onfocusout="defocused(this)")
                                <span class="material-symbols-outlined">arrow_drop_down</span>
                                each user in users
                                    option(value=`${user.id}`) #{user.firstName} #{user.lastName}
                            .text-center
                                button.btn.btn-round.bg-gradient-info.btn-lg.w-100.mt-4.mb-0(type="submit") Submit
                    .card-footer.text-center.pt-0.px-lg-2.px-1
